<h1><%=@post.address %></h1>

<iframe
  width="100%"
  height="350"
  frameborder="0" style="border:0"
  src="https://www.google.com/maps/embed/v1/place?key=<%= Rails.application.secrets.google_api_key %>&q=(<%= '%.2f' % @location.latitude %>, <%= '%.2f' % @location.longitude %>)"
  allowfullscreen>
</iframe>